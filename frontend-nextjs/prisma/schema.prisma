generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                      Int            @id @default(autoincrement())
  name                    String         @db.VarChar(100)
  mobile                  String?        @unique @db.VarChar(15)
  email                   String         @unique @db.VarChar(255)
  password_hash           String?        @db.VarChar(255)
  createdAt               DateTime?      @default(now()) @map("created_at") @db.Timestamp(0)
  lastLogin               DateTime?      @map("last_login") @db.Timestamp(0)
  isActive                Boolean?       @default(true) @map("is_active")
  resetPasswordExpires    DateTime?      @db.Timestamp(0)
  resetPasswordOTP        String?        @db.VarChar(10)
  resetPasswordOTPExpires DateTime?      @db.Timestamp(0)
  resetPasswordToken      String?        @unique @db.VarChar(255)
  queries                 QueryHistory[]

  @@index([email], map: "idx_email")
  @@index([mobile], map: "idx_mobile")
  @@map("users")
}

model QueryHistory {
  id           String   @id @default(cuid())
  userId       Int
  promptText   String   @db.Text
  generatedSQL String   @db.Text
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("query_history")
}
